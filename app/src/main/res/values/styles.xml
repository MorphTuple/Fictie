<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="breadCrumbTv">
        <item name="android:background">@drawable/shape_rounded</item>
        <item name="android:paddingStart">@dimen/d_padding_margin_small</item>
        <item name="android:paddingEnd">@dimen/d_padding_margin_small</item>
        <item name="android:paddingBottom">@dimen/d_padding_margin_small_x</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">@dimen/d_padding_margin_small_x</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="breadCrumbStatTv" parent="breadCrumbTv">
        <item name="android:layout_marginEnd">@dimen/d_padding_margin</item>
        <item name="android:layout_marginTop">@dimen/d_padding_margin</item>
    </style>

    <style name="breadCrumbRequiredTagTv" parent="breadCrumbTv">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginEnd">@dimen/d_padding_margin</item>
        <item name="android:layout_marginTop">@dimen/d_padding_margin</item>
    </style>

    <style name="ReaderToolbar">
        <item name="iconTint">#fff</item>
<!--        <item name="colorOnPrimary">@color/ca_green</item>-->
<!--        <item name="android:textColorPrimary">@color/ca_green</item>-->
    </style>

    <style name="ReaderToolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ReaderToolbar.SubtitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">12sp</item>
    </style>


</resources>
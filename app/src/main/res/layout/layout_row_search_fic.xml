<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/d_padding_margin_xh"
        android:paddingVertical="@dimen/d_padding_margin_h">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/authorTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/bookmarkBtn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d_icon_size_xx"
                android:layout_alignParentEnd="true"
                android:background="?android:selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_bookmark_border_black_24dp"
                android:tint="?android:attr/textColorPrimary" />

        </RelativeLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d_padding_margin"
            app:flexWrap="wrap">

            <TextView
                android:id="@+id/ratingTv"
                style="@style/breadCrumbRequiredTagTv"
                android:backgroundTint="@color/rp_gray" />

            <TextView
                android:id="@+id/categoryTv"
                style="@style/breadCrumbRequiredTagTv"
                android:backgroundTint="@color/rp_gray" />

            <TextView
                android:id="@+id/warningTv"
                style="@style/breadCrumbRequiredTagTv"
                android:backgroundTint="@color/rp_gray" />

            <TextView
                android:id="@+id/statusTv"
                style="@style/breadCrumbRequiredTagTv"
                android:backgroundTint="@color/rp_gray" />

        </com.google.android.flexbox.FlexboxLayout>

        <TextView
            android:id="@+id/tagsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/fandomsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/summaryTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_padding_margin_small"
            android:text="@string/app_name"
            android:textSize="12sp" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap">

            <TextView
                android:id="@+id/languageTv"
                style="@style/breadCrumbStatTv"
                android:backgroundTint="@color/rp_gray" />

            <TextView
                android:id="@+id/wordsTv"
                style="@style/breadCrumbStatTv"
                android:backgroundTint="@color/rp_blue" />

            <TextView
                android:id="@+id/chapters_tv"
                style="@style/breadCrumbStatTv"
                android:backgroundTint="@color/rp_red" />

            <TextView
                android:id="@+id/commentCountTv"
                style="@style/breadCrumbStatTv"
                android:backgroundTint="@color/rp_purple" />

            <TextView
                android:id="@+id/kudosCountTv"
                style="@style/breadCrumbStatTv"
                android:backgroundTint="@color/rp_pink" />

            <TextView
                android:id="@+id/bookmarkCountTv"
                style="@style/breadCrumbStatTv"
                android:backgroundTint="@color/sw_green" />

            <TextView
                android:id="@+id/hitsTv"
                style="@style/breadCrumbStatTv"
                android:backgroundTint="@color/sw_yellow" />

        </com.google.android.flexbox.FlexboxLayout>
    </LinearLayout>

</FrameLayout>
